<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <% if task.completed %>
    <i class="fas fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
    <li><%= link_to task.title, task_path(task) %> -- <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>
